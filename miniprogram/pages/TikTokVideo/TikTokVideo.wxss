page{
  background-color: white;
}
.videoView{
  position: relative;
  margin: 40rpx 50rpx 30rpx;
}
.video{
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx;
  box-shadow:2px 3px 10px #6B6B6B;
}
.cover{
  width: 100%;
  height: 420rpx;
  border-radius: 20rpx;
  position: absolute;
  left: 0rpx;
}
.text{
  margin-left: 40rpx;
  margin-right: 20rpx;
  font-size: 36rpx;
  font-weight: 650;
  /* font-family: NSimSun; */
}
.aline{
  margin: 0rpx 50rpx;
  margin-top: 40rpx;
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.041);
}
.time{
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  color: white;
  font-size: 33rpx;
}

